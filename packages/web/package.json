{
  "name": "@bermuda/web",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@bermuda/shared": "*",
    "@mediapipe/tasks-vision": "0.10.17",
    "@react-spring/rafz": "9.7.5",
    "@react-spring/types": "9.7.5",
    "@react-three/drei": "9.122.0",
    "@react-three/fiber": "8.18.0",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "14.6.1",
    "@types/jest": "^27.5.2",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@types/three": "0.160.0",
    "@upstash/ratelimit": "2.0.6",
    "@upstash/redis": "1.35.3",
    "@use-gesture/react": "10.3.1",
    "ajv": "8.17.1",
    "bidi-js": "1.0.3",
    "detect-gpu": "5.0.70",
    "express": "^5.1.0",
    "framer-motion": "10.18.0",
    "hls.js": "1.6.13",
    "its-fine": "1.2.5",
    "potpack": "1.0.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "5.0.1",
    "stats-gl": "2.4.2",
    "stats.js": "0.17.0",
    "suncalc": "^1.9.0",
    "suspend-react": "0.1.3",
    "three": "0.160.1",
    "troika-worker-utils": "0.52.0",
    "tunnel-rat": "0.1.2",
    "typescript": "^4.9.5",
    "web-vitals": "5.1.0",
    "webgl-sdf-generator": "1.1.1",
    "zustand": "5.0.8"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "build:production": "GENERATE_SOURCEMAP=false REACT_APP_ENV=production npm run build",
    "build:analyze": "npm run build && npx webpack-bundle-analyzer build/static/js/*.js",
    "test": "react-scripts test",
    "test:coverage": "react-scripts test --coverage --watchAll=false",
    "test:ci": "react-scripts test --coverage --watchAll=false --testTimeout=30000",
    "eject": "react-scripts eject",
    "analyze": "npm run build && npx serve -s build -l 3000",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "type-check": "tsc --noEmit",
    "pre-deploy": "npm run lint && npm run type-check && npm run test:ci && npm run build:production",
    "health-check": "node -e \"const { healthService } = require('./build/static/js/productionHealthService.js'); healthService.performHealthCheck().then(console.log);\"",
    "performance-audit": "npx lighthouse http://localhost:3000 --output=json --output-path=./lighthouse-results.json",
    "security-audit": "npm audit --audit-level=moderate && npx eslint src --ext .ts,.tsx"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ],
    "plugins": [
      "security"
    ],
    "rules": {
      "security/detect-object-injection": "warn",
      "security/detect-non-literal-regexp": "warn",
      "security/detect-non-literal-require": "warn",
      "security/detect-possible-timing-attacks": "warn",
      "security/detect-eval-with-expression": "error",
      "security/detect-unsafe-regex": "error",
      "security/detect-no-csrf-before-method-override": "error"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@types/node": "^24.1.0",
    "@types/suncalc": "^1.9.2",
    "@vercel/node": "5.3.21",
    "autoprefixer": "^10.4.21",
    "eslint-plugin-security": "3.0.1",
    "fast-check": "^4.2.0",
    "postcss": "^8.4.31",
    "react-dev-utils": "12.0.1",
    "tailwindcss": "^3.4.17"
  },
  "overrides": {
    "nth-check": "^2.1.1",
    "resolve-url-loader": "^5.0.0"
  },
  "jest": {
    "testMatch": [
      "<rootDir>/src/**/*.{test,spec}.{js,jsx,ts,tsx}"
    ]
  }
}
